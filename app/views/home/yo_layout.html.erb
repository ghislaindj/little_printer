<html>
  <head>
    <meta charset='utf-8'>
    <style type="text/css" media="screen">
    body {
      font-family: Verdana;
      font-size:24px;
      width: 384px;
      margin:0px;
      text-align: center;
    }

    h1 {
      font-size: 200px;
      text-align: center;
      margin-bottom: 10px;
      margin-top: 10px;
    }

    p {
      text-align: center;
      font-size: 50px;
      margin: 5px;
    }

    p.time {
      font-size: 20px;
      margin-bottom: 100px;
    }

    h4, p.time {
      font-family: 'Merienda One';
    }

    h4 {
      margin: 5px;
    }

    img.avatar {
      width: 100%;
    }

    hr.style-two {
      border: 0;
      height: 3px;
      background-image: -webkit-linear-gradient(left, rgba(0,0,0,0), rgba(0,0,0,0.75), rgba(0,0,0,0));
      background-image:    -moz-linear-gradient(left, rgba(0,0,0,0), rgba(0,0,0,0.75), rgba(0,0,0,0));
      background-image:     -ms-linear-gradient(left, rgba(0,0,0,0), rgba(0,0,0,0.75), rgba(0,0,0,0));
      background-image:      -o-linear-gradient(left, rgba(0,0,0,0), rgba(0,0,0,0.75), rgba(0,0,0,0));
    }
    </style>
  </head>
  <body>
    <hr class="style-two">
    <img class="avatar" src="http://robohash.org/<%= @yo.username %>.png" />
    <h1>Yo!</h1>
    <h4>from</h4>
    <p><%= @yo.username %></p>
    <p class="time"><%= @yo.created_at.strftime('%d %B %Y, %H:%M') %></p>
    <hr class="style-two">
  </body>
</html>