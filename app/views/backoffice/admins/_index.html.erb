<%- model_class = Admin -%>
<div class="span12">
  <div class="page-header">
    <h1>Liste des administrateurs</h1>
  </div>

  <%= link_to 'Ajouter un administrateur', 
              new_backoffice_admin_path, 
              remote: true, 
              class: 'btn btn-primary' %>
              
  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th><%= model_class.human_attribute_name(:email) %></th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% Admin.all.each do |admin| %>
        <tr>
          <td><%= admin.email %></td>
          <td><%= link_to 'Supprimer', backoffice_admin_path(admin), method: :delete, remote: true, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>